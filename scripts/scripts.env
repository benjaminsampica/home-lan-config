# --- REQUIRED ---
LANCACHE_IP=192.168.50.201
DNS_BIND_IP=192.168.50.201

# One or more upstream DNS resolvers (semicolon-separated if multiple internal DNS)
UPSTREAM_DNS=8.8.8.8

# Where to store cache and logs (host path). Use forward slashes on Windows.
CACHE_ROOT=C:/lancache

# --- Sizing & safety ---
# Max cache size (e.g., 2 TB). Use g or t suffix.
CACHE_DISK_SIZE=500g
# Keep at least this much free on the drive.
MIN_FREE_DISK=100g
# ~250m per 1TB of CACHE_DISK_SIZE
CACHE_INDEX_SIZE=500m
# Max age before eviction (days + 'd')
CACHE_MAX_AGE=3650d

# Optional: time zone for container logs
TZ=America/Chicago

# Usually leave as default; enables generic IP assignment in DNS
USE_GENERIC_CACHE=true
